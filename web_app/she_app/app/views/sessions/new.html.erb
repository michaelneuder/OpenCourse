<% provide(:title, "Login") %>
<div class="container-fluid block block-login-1">
  <div class="layer">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Login</h1>
        <%= form_for(:sessions, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

            <% if flash[:danger] %>
                <div class="error-list login-error"><%= flash.now[:danger] %></div>
            <% end %>

          <%= f.submit "Login", class: "btn-lg" %>
        <% end %>
        <p>
          <%= link_to "New User?", signup_path %>
        </p>
      </div>
    </div>
  </div>
</div>

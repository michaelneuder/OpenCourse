<% provide(:title, "Signup") %>
<div class="container-fluid block block-new-user-1">
  <div class="layer">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Signup</h1>
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :twitter_handle %>
          <%= f.text_field :twitter_handle %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Create my account", class: "btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
